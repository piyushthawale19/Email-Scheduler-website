// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum for email status tracking
enum EmailStatus {
  SCHEDULED
  PROCESSING
  SENT
  FAILED
  RATE_LIMITED

  @@map("email_status")
}

// User model - stores Google OAuth user data
model User {
  id        String   @id @default(uuid())
  googleId  String   @unique @map("google_id")
  email     String   @unique
  name      String
  avatar    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  sessions Session[]
  senders  Sender[]
  emails   Email[]
  batches  EmailBatch[]

  @@map("users")
}

// Session model - for JWT token management
model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("sessions")
}

// Sender model - supports multiple email senders per user
model Sender {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  email     String
  name      String
  smtpHost  String?  @map("smtp_host")
  smtpPort  Int?     @map("smtp_port")
  smtpUser  String?  @map("smtp_user")
  smtpPass  String?  @map("smtp_pass")
  isDefault Boolean  @default(false) @map("is_default")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails Email[]

  @@unique([userId, email])
  @@index([userId])
  @@map("senders")
}

// Email model - stores all email jobs with full tracking
model Email {
  id             String      @id @default(uuid())
  userId         String      @map("user_id")
  senderId       String?     @map("sender_id")
  recipientEmail String      @map("recipient_email")
  subject        String
  body           String
  scheduledAt    DateTime    @map("scheduled_at")
  sentAt         DateTime?   @map("sent_at")
  status         EmailStatus @default(SCHEDULED)
  errorMessage   String?     @map("error_message")
  retryCount     Int         @default(0) @map("retry_count")
  maxRetries     Int         @default(3) @map("max_retries")
  jobId          String?     @unique @map("job_id") // BullMQ job ID for idempotency
  messageId      String?     @map("message_id") // SMTP message ID
  previewUrl     String?     @map("preview_url") // Ethereal preview URL
  batchId        String?     @map("batch_id")
  batchIndex     Int?        @map("batch_index")
  metadata       Json?
  attachments    Json? // Array of {filename, size, mimetype, path}
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sender Sender? @relation(fields: [senderId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([senderId])
  @@index([status])
  @@index([scheduledAt])
  @@index([batchId])
  @@index([createdAt])
  @@map("emails")
}

// Rate limit counter - stored in DB for distributed rate limiting
model RateLimitCounter {
  id          String   @id @default(uuid())
  counterKey  String   @unique @map("counter_key") // Format: "global:2024-01-15:14" or "sender:id:2024-01-15:14"
  count       Int      @default(0)
  windowStart DateTime @map("window_start")
  windowEnd   DateTime @map("window_end")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([counterKey])
  @@index([windowStart, windowEnd])
  @@map("rate_limit_counters")
}

// Email batch - for tracking batch operations
model EmailBatch {
  id                 String   @id @default(uuid())
  userId             String   @map("user_id")
  totalEmails        Int      @map("total_emails")
  scheduledEmails    Int      @default(0) @map("scheduled_emails")
  sentEmails         Int      @default(0) @map("sent_emails")
  failedEmails       Int      @default(0) @map("failed_emails")
  startTime          DateTime @map("start_time")
  delayBetweenEmails Int      @map("delay_between_emails") // in seconds
  hourlyLimit        Int      @map("hourly_limit")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("email_batches")
}
